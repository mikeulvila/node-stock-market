extends layout

block content
  h1= title

  table.table.tab-content
    tr
      th Name:
      td #{result.Name}
    tr
      th Symbol:
      td #{result.Symbol}
    tr
      th Last Price:
      td $#{result.LastPrice}

  form(method='POST', action="/buy/#{result.Symbol}")
    .form-group
      label Qty:
      input(type="text", name='symbolSearch', placeholder='Enter quantity to buy.')
      button(type="submit" class="btn btn-default") Buy

  form(method='POST', action="/sell/#{result.Symbol}")
    .form-group
      label Qty:
      input(type="text", name='symbolSearch', placeholder='Enter quantity to sell.')
      button(type="submit" class="btn btn-default") Sell

