extends layout

block content
  .container
    .row
      .col-lg-12.col-md-12
        h1= title

        table(class='table table-hover')
          caption Portfolio
          tr
            th Symbol
            th Company
            th Price
            th Qty.
          each stock, i in stocks
            tr
              td #{stock.symbol}
              td #{stock.name}
              td #{stock.price}
              td #{stock.qty}
              td
                a(href="/detail/get/#{stock._id}") Buy | Sell

        h4.bg-info Total portfolio value: $#{total}
