extends layout

block content
  .container
    .row
      .col-lg-12.col-md-12
        h1= title

        ul.errors
          if errors
            each error, i in errors
              li.alert.alert-danger Error: #{error}

        form(method='POST', action="/quote")
          .form-group
            label Symbol
            input(type="text", name='symbolSearch', placeholder='Search for company')
          button.btn.btn-primary(type="submit" class="btn btn-default") Get Details

        if results
          ul Click for more details:
            each result, i in results
              li
                a(href="/detail/#{result.Symbol}") #{result.Symbol} #{result.Name}

